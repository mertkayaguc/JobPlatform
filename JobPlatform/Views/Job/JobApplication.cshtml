@model JobPlatform.Models.JobApplication

<section class="profile-account-setting">
    <div class="container">
        <div class="account-tabs-setting">
            <div class="tab-content" id="nav-tabContent">
                <div class="tab-pane fade show active" id="nav-acc" role="tabpanel" aria-labelledby="nav-acc-tab">
                    <div class="acc-setting">
                        <h3>Joj Application</h3>
                        @if (ViewData["err"] == null)
                        {
                            <form method="post" enctype="multipart/form-data" class="form-horizontal">
                                <input asp-for="@Model.UserId" class="form-control" hidden />
                                <input asp-for="@Model.JobId" class="form-control" hidden />

                                <div class="notbar">
                                    <p>Upload one or more files using this form:</p>
                                    <div class="col-md-10">
                                        <input type="file" name="CvUrl" multiple>
                                    </div>
                                </div>
                                <div class="save-stngs">
                                    <button type="submit" class="btn btn-default">Job Application</button>
                                </div>
                            </form>
                        }
                        else
                        {<div class="save-stngs">
                                <h1>Zaten başvurdun</h1>
                            </div>

                        }
                    </div><!--acc-setting end-->
                </div>
            </div>
        </div><!--account-tabs-setting end-->
    </div>
</section>
